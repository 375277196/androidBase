<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/id_btn_startAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start Animation" />

    <Button
        android:id="@+id/id_btn_stopAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_btn_startAnimation"
        android:text="cancel Animation" />


    <ImageView
        android:id="@+id/id_iv_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_btn_stopAnimation"
        android:src="@drawable/flag_mark_blue" />


</RelativeLayout>
