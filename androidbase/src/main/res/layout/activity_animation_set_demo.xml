<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/id_btn_startAnimation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RotateAnimation - start" />

    <Button
        android:id="@+id/id_btn_stopAnimation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_btn_startAnimation1"
        android:text="cancel Animation" />


    <ImageView
        android:id="@+id/id_iv_flag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_btn_stopAnimation1"
        android:src="@drawable/face" />


</RelativeLayout>

